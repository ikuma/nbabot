# Polymarket
POLYMARKET_PRIVATE_KEY=
POLYMARKET_HOST=https://clob.polymarket.com
POLYMARKET_CHAIN_ID=137

# HTTP proxy for geo-restricted APIs (Polymarket blocks some regions)
# e.g. socks5://127.0.0.1:1080 or http://127.0.0.1:8080
HTTP_PROXY=

# The Odds API (used for game discovery; optional in Phase 2+)
ODDS_API_KEY=

# Telegram notifications (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Strategy mode: "calibration" (default) or "bookmaker" (legacy)
STRATEGY_MODE=calibration

# Calibration strategy parameters
# Price range and edge threshold are no longer used as filters.
# The calibration table (0.20-0.95) and positive EV determine tradability.
# Sweet spot (0.20-0.55) gets full Kelly; outside gets 0.5x Kelly.

# Risk parameters
MAX_POSITION_USD=100
MAX_DAILY_POSITIONS=20
MAX_DAILY_EXPOSURE_USD=2000
KELLY_FRACTION=0.25

# Legacy bookmaker mode parameters
MIN_EDGE_PCT=1.0
DAILY_LOSS_LIMIT_PCT=3
